use alienfile;
plugin 'PkgConfig' => 'libpcre';
share {
  plugin 'Download::GitHub' => (
    github_user => 'PhilipHazel',
    github_repo => 'pcre2',
    version => qr/pcre2-([0-9\.]+)/,
  );
  plugin 'Build::Autoconf';
  build [
    'sh autogen.sh',
    '%{configure} --disable-shared',
    '%{make}',
    '%{make} install',
  ];
};
